------------------------------------------------------------------------------+
-- Trial channel for pulse rate at 3 descending levels of type hierarchy. Only 
--   the lowest will actually work.
------------------------------------------------------------------------------+
package PulseRate_Channel
public
  with Base_Types;
  with MDCF_Data_Props, MDCF_Comms;
  with PulseOx_Exchange; 

-- Pulserate channel consisting of alerts and metrics payload-exchange bundles.
feature group pulserate_channel
features
  alerts: feature group pulse_alerts;
  metrics: feature group pulse_metrics;
properties
  MDCF_Data_Props::MDC_ATTR_ID_PARAM_GRP => "Pulse Rate Channel";
end pulserate_channel;

-- Alerts bundle of pulserate channel. Get or periodic exchange of pulse.
feature group pulse_alerts
features
  pulse_get: feature group PulseOx_Exchange::pulse_get;
  pulse_periodic: feature group PulseOx_Exchange::pulse_periodic;
end pulse_alerts;

-- Metrics bundle of pulserate channel. Get or periodic exchange of pulse.
feature group pulse_metrics
features
  pulse_get: feature group PulseOx_Exchange::pulse_get;
  pulse_periodic: feature group PulseOx_Exchange::pulse_periodic;
end pulse_metrics;

end PulseRate_Channel;
